    <div class="form-group">
      <div class="col-sm-8">    
        <label>Name </label>
        <span class="err"><%= @book.errors[:name].join('. ') %></span><br/>
          <%= f.text_field :name , :class => 'form-control', :placeholder => 'Name'%>
      </div>
    </div>
       
    

    <div class="form-group">
      <div class="col-sm-8"> 
        <label>Author </label>
         <span class="err"><%= @book.errors[:author].join('. ') %></span><br/>
        <%= f.text_field :author, :class => 'form-control', :placeholder => 'Name'  %>
      </div>
    </div>
        
    <div class="form-group"> 
      <div class="col-sm-8"> 
       <label >Category </label>
        <span class="err"><%= @book.errors[:category].join('. ') %></span><br/>
        <%= f.select(:category, ['History', 'Science','mystery','comics'], {include_blank: "Select something", required: true  }, { :class => 'form-control' }) %>

      </div>
    </div>


         
    <div class="form-group">
      <div class="col-sm-8"> 
        <label>Description </label>
         <span class="err"><%= @book.errors[:description].join('. ')%></span><br/>
        	<%= f.text_area(:description, size: '25x2',:class => 'form-control',:placeholder => 'Description') %>

      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8"> 
         <label> <%= f.label :uploadimage %></label>
          <span class="err" ><%= @book.errors[:image].join('. ') %></span> <br/>
          <%= f.file_field :image,:class => 'form-control',data:{required:true} %> 
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8" align="center"> 
        <%= check_box_tag(:published) %>
        <%= label_tag(:published, "Is published")%>
             
      </div>
    </div>
    
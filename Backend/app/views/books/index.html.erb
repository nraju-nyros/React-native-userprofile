
<div class="container" style="background-color: #f3f2f4"><br/><br/>

	<div class="All_books">
		<%= link_to 'All Books',{controller: 'books', action:'index'},
		 :class => "add1 btn btn-xs "  %> <hr class ="line" />
		  <%= link_to 'Add New Book', new_book_path,:class => "add btn "  %> 

		<table  class = "table_body table table-bordered" style="background-color: #f3f2f4" >
      <thead >
				<tr>
					<th>Name</th>
					<th>Author</th>
					<th>Category</th>
					<th>Description</th>
					<th>Attachment</th>
				  <th colspan="3">Actions</th>
				</tr>
			</thead>
		  <tbody>
		  	<% @books.each do|book| %>
		  	  <tr>
		        <td><p> <%= book.name %></p></td>
		        <td><p> <%= book.author %></p></td>
		        <td><p> <%= book.category %></p></td>
		        <td><p> <%= truncate(book.description,length:10) %></p></td>
		        <td><%= link_to "Download", book.image_url %></td>
		      
		        <td><%= link_to 'View', book_path(book),:class => "view btn" %>
		            <%= link_to 'Edit',edit_book_path(book),:class => "edit btn " %>
		            <%= link_to 'Delete', '#',{:class=>"btn btn-danger btn-sm", "data-toggle"=>"modal", "data-target" => "#delete-#{book.id}"} %>
                <div class="modal fade" id="delete-<%= book.id %>">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                       <h3>Article Delete</h3>
                      </div>
                      <div class="modal-body">
                       <p>Are you sure to delete this article?</p>
                      </div>
                      <div class="modal-footer">
                        <%= link_to 'Delete', book_path(book), method: :delete, :class => 'btn btn-danger btn-sm' %>
                       <%= link_to 'Cancel', books_path,{:class=>'btn btn-warning btn-sm'} %>
                      </div>
                    </div>
                  </div>
                </div>
		          </td>
		      </tr>
		    <% end %>
		  </tbody>

		</table>
	</div>
	<br/><br/>
</div>
                   

<br/>
    

